page {
  min-width: 320px;
  font: 14px/150% "微软雅黑", Verdana, Arial, Helvetica, sans-serif;
  color: #222;
  -webkit-text-size-adjust: none;
  padding: 0;
  margin: 0;
  background-color: white;
}

.box, .content {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 0.8rem;
  padding-right: 20rpx;
}

.content {
  padding-left: 160rpx;
}

.box label {
  flex-grow: 1;
  text-align: right;
}

.box input {
  background: #fff;
  color: #aaa;
  flex-grow: 3;
  border: 1px solid #f7982a;
  display: inline-block;
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem #aaa;
  padding: 0.3rem;
}

