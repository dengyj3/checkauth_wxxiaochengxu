/* pages/main/main.wxss */

page{
  min-width: 320px;
  font: 14px/150% "微软雅黑", Verdana, Arial, Helvetica, sans-serif;
  color: #222;
  -webkit-text-size-adjust: none;
  padding: 0;
  margin: 0;
  background-color:#f8f8f8;	
}

.search-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  /*background-color: #ff5a37;
  color: #FFF;*/
  height: 80rpx;
  padding: 10rpx 20rpx;
  z-index: 100;
}
.search-container input {
  background: #FFF;
  color: #AAA;
  padding: 5px 10rpx;
  height: 40rpx;
  width: 100%;
  border-radius: 8rpx;
}
.search-container icon {
  position: absolute;
  z-index: 10;
  top: 50%;
  margin-top: -20rpx;
  right: 40rpx;
}

.logo {
  text-align:center;
  padding-top:500rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #AAA
}


.title {
  line-height:30px; 
  margin-left: 25rpx;
}
.cover {
  line-height:30px; 
  margin-left: 25rpx;
  font-size: 18px;
  font-weight: 700;
}
.title image{
  width: 30rpx;
  height: 20rpx;
  position: absolute;
  display: flex;
}
/*header*/
.header {
  padding: 20rpx 30rpx;
}
.header text {
  color: #A6A6A6;
  font-size: 35rpx
}
/*navigator点击时的颜色*/
.navigator-hover {  
    color: blue ;  
}

.hotquery{
  line-height:30px; 
  margin-left: 25rpx;
}
.common-list {
  padding: 0 20rpx;
}
.list-item{
	display: flex;
	padding: 20rpx 20rpx; 
	border-bottom: 1rpx solid #e8e8e8;
  border-radius: 2px;
  background-color: white;
}

.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 28rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}