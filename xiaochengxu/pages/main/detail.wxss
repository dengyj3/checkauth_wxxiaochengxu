/* pages/main/detail.wxss */

page {
  min-width: 320px;
  font: 14px "微软雅黑", Verdana, Arial, Helvetica, sans-serif;
  color: #222;
  -webkit-text-size-adjust: none;
  padding: 0;
  margin: 0;
  background-color: #f8f8f8;
}
.container {
  padding: 0 0;
}
.service-item {
  display: block;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}


.title {
  line-height:30px; 
  /*margin-left: 25rpx;
  padding: 0 20rpx;*/
}

.title text{
  font-size: 24rpx;
}

.cover {
  font-size: 18px;
  font-weight: 600;
  display: block;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}
.cover view {
  width: 30px;
  height: 30px;
  background-color: #259bf3;
  border-radius: 5px;
  text-align: center;
  color: #fff; 
  line-height: 30px;
  font-size: 14px;
  margin-right: 15px;
  vertical-align: middle;
  display: inline-block;
}
.msection-title {
  font-size: 18px;
  font-weight: 600;
  margin: 0px 0 20px 0;
  padding-left: 10px;
  background-size: 5px 25px;
  position: relative;
}

.msection-title image {
  margin-left: -10px;
  width: 5px;
  height: 25px;
  position: absolute;
  text-align: left;
}

.table {
  border: 0px solid lightgray;
  padding-bottom: 20rpx;
  /* width:100%; */
  padding-left: 10rpx;
  padding-right: 10rpx;
  /*margin-left:-10rpx;*/
}

.tr {
  display: flex;
  width: 100%;
  justify-content: left;
  height: auto;
  align-items: left;
  /* font-size: 20rpx; */
}
/*第一列居中*/
/* .tr view:first-child{
   width: 50%; 
   text-align: center; 
} */

.td {
  width: 100%;
  justify-content: center;
  text-align: center;
  /* border: 1px solid lightgray; */
}

.bg-w {
  background: #fff;
}

.bg-g {
  background: #fff;
}

.th,.th1 {
  width: 100%;
  justify-content: center;
  background: #b2b2b2;
  /* font-size: 24rpx; */
  font-weight:bold;
  /*color: #000000;*/
  display: flex;
  height: 3rem;
  align-items: center;
  /* border-right: 1px solid lightgray; */
}

.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 24rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}

.content{
  padding: 20rpx 20rpx;
  display: block;
  border-bottom: 1rpx solid #e8e8e8;
}

.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list:first-child {
  margin-top: 20rpx;
}

.form-list::before, .form-list::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e3e3e3;
}

.form-list::before {
  top: 0;
}

.form-list::after {
  bottom: 0;
}

.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 40rpx;
  background-color: #fff;
}

.form-item::before {
  content: '';
  display: block;
  position: absolute;
  z-index: 99;
  left: 0;
  top: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e1e1e1;
}

.form-item-hd {
  width: 170rpx;
  padding-right: 5px;
}

.form-item-bd {
  flex: 1;
}
.btn-area{
  height: 25px;
  border: 4px solid #e1e1e1;
  width: 98%;
  margin-bottom: 10px;
}
.btn-area label{
  width: 20%;
  float: left; 
  text-align: center;
  font-size: 12px;
  height: 25px;
  padding-top: 4px;
}


::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}

.active{
  background: #e1e1e1;
}

