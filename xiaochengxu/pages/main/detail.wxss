/* pages/main/detail.wxss */

page {
  min-width: 320px;
  font: 14px/150% "微软雅黑", Verdana, Arial, Helvetica, sans-serif;
  color: #222;
  -webkit-text-size-adjust: none;
  padding: 0;
  margin: 0;
  background-color: #f8f8f8;
}
.container,.container-body {
  padding: 0 0;
}
.service-item {
  display: block;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}


.title {
  line-height:30px; 
  /*margin-left: 25rpx;
  padding: 0 20rpx;*/
}

.title text{
  font-size: 24rpx;
}

.cover {
  font-size: 18px;
  font-weight: 600;
  display: block;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #e8e8e8;
}
.cover span {
  width: 30px;
  height: 30px;
  background-color: #259bf3;
  border-radius: 5px;
  text-align: center;
  color: #fff;
  line-height: 30px;
  font-size: 14px;
  margin-right: 15px;
  vertical-align: middle;
  display: inline-block;
}
.msection-title {
  font-size: 18px;
  font-weight: 600;
  margin: 0px 0 20px 0;
  padding-left: 10px;
  background-size: 5px 25px;
  position: relative;
}

.msection-title image {
  margin-left: -10px;
  width: 5px;
  height: 25px;
  position: absolute;
  text-align: left;
}

.table {
  border: 0px solid lightgray;
  padding-bottom: 20rpx;
  width:100%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  /*margin-left:-10rpx;*/
}

.tr {
  display: flex;
  width: 100%;
  justify-content: left;
  height: auto;
  align-items: left;
  font-size: 20rpx;
}

.tr view:first-child{/*第一列居中*/
  width: 50%;
  text-align: center;
}

.td {
  width: 100%;
  justify-content: center;
  text-align: center;
  /* border: 1px solid lightgray; */
}

.bg-w {
  background: snow;
}

.bg-g {
  background: lavender;
}

.th {
  width: 100%;
  justify-content: center;
  background: #b2b2b2;
  font-size: 24rpx;
  font-weight:bold;
  /*color: #000000;*/
  display: flex;
  height: 3rem;
  align-items: center;
  /* border-right: 1px solid lightgray; */
}

.service-tags{
	margin: 6rpx 0;
}
.service-tags text{
	padding: 6rpx 16rpx;
	border: 1rpx solid #f7982a;
	line-height: 1;
	color: #f7982a;
	font-size: 24rpx;
	border-radius: 4rpx;
	margin-right: 10rpx;
	margin-bottom: 10rpx;
	white-space: nowrap;
}

.content{
  padding: 20rpx 20rpx;
  display: block;
  border-bottom: 1rpx solid #e8e8e8;
}

.swiper-tab{
  /*width: 100%;*/ 
  /*border-bottom: 2rpx solid #888888; */
  text-align: left; 
  line-height: 40rpx;
  padding-bottom: 10px;
}
.swiper-tab-list{
  /*font-size: 20rpx; */
  display: inline-block; 
  /*width: 16.6%; */
  color: #888888; 
  padding:0 10rpx;
}
.on{
  color: black; 
  border-bottom: 5rpx solid black;
}
.swiper-box{ 
  display: flex;
  height: 100%;
  width: 100%;
  overflow: hidden;
 }
.swiper-box view{ 
  /*text-align: left; */
  padding-top:10rpx;
}


.form-list {
  position: relative;
  margin-bottom: 20rpx;
}

.form-list:first-child {
  margin-top: 20rpx;
}

.form-list::before, .form-list::after {
  content: '';
  display: block;
  position: absolute;
  left: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e3e3e3;
}

.form-list::before {
  top: 0;
}

.form-list::after {
  bottom: 0;
}

.form-item {
  position: relative;
  box-sizing: border-box;
  display: flex;
  width: 100%;
  padding: 15rpx 40rpx;
  background-color: #fff;
}

.form-item::before {
  content: '';
  display: block;
  position: absolute;
  z-index: 99;
  left: 0;
  top: 0;
  height: 1px;
  width: 100%;
  transform: scaleY(0.5);
  background-color: #e1e1e1;
}

.form-item-hd {
  width: 170rpx;
  padding-right: 5px;
}

.form-item-bd {
  flex: 1;
}
